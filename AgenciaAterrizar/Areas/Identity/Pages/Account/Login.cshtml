@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<body>

    <div class="divLogin container mt-5 animate__animated animate__fadeIn">
        <div class="divTitulo">
            <h3 class="mb-2"><i class="fa-solid fa-right-to-bracket"></i> Iniciar Sesión</h3>
            <hr class="mb-3">
        </div>

        <form id="account" method="post">
            <div class="row formulario">
                <div class="col-md-8">
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control input" autocomplete="username" aria-required="true" placeholder="Correo Electrónico">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" type="password" class="form-control input" autocomplete="current-password" aria-required="true" placeholder="Contraseña">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8 form-group">
                    <div class="d-flex justify-content-center mt-2 mb-3">
                        <button id="login-submit" type="submit" class="buttonRegister">
                            <span class="button-content">Ingresar </span>
                        </button>
                    </div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
