@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro Nuevo Usuario";
}
<link rel="stylesheet" href="~/css/registrar.css" asp-append-version="true" />
<body>
<h1 class="titulo-register ">@ViewData["Title"]</h1>

    
<div class="divRegistrar container mt-5">
    <h2 class="titulo-carta ">
         Crea una cuenta nueva
    </h2>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="row formulario ">
            <div class="col-md-9">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control input" autocomplete="username" aria-required="true" placeholder="name@example.com">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" type="password" class="form-control input" autocomplete="new-password" aria-required="true" placeholder="password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control input" autocomplete="new-password" aria-required="true" placeholder="confirmar contraseña">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-warning btnSearch">Registrar</button>
            </div>
            
        </div>
    </form>
</div>
</body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
